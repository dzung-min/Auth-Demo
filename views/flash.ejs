<% if (successMessage.length) { %>
<div
  class="alert alert-primary alert-dismissible fade show container"
  role="alert"
>
  <i class="bi bi-check-circle-fill"></i>
  <span><%= successMessage %></span>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } else if (failureMessage.length) { %>
<div
  class="alert alert-warning alert-dismissible fade show container"
  role="alert"
>
  <%= failureMessage %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %>
