<div class="mb-3">
  <h1><%= camp.title%></h1>
  <h2><%= camp.location %></h2>
  <img
    src="/tmp/my-uploads/<%= camp.represent_photo %>"
    alt="<%= camp.title %>"
    width="100%"
  />
  <p><%= camp.description %></p>

  <% if (currentUser && currentUser.id.toString() === camp.user_id.toString()) {
  %>
  <a class="btn btn-warning" href="/camps/<%= camp._id %>/edit">Edit</a>
  <form
    class="d-inline mx-3"
    action="/camps/<%= camp._id %>?_method=DELETE"
    method="post"
  >
    <button type="submit" class="btn btn-danger">Delete</button>
  </form>
  <% } %>
</div>
